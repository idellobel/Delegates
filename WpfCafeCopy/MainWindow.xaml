<Window x:Class="WpfCafeCopy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCafeCopy"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="btnPintPlease" Content="Pint, please!" HorizontalAlignment="Left" Margin="21,32,0,0" VerticalAlignment="Top" Width="75"
                Click="btnPintPlease_Click"/>
        <Label x:Name="lblCountPints" Content="0" HorizontalAlignment="Left" Margin="74,173,0,0" VerticalAlignment="Top" Width="428" HorizontalContentAlignment="Right"/>
        <ScrollViewer HorizontalAlignment="Left" Height="77" Margin="21,80,0,0" VerticalAlignment="Top" Width="481" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Auto">
            <StackPanel x:Name="spPints" HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal"/>
        </ScrollViewer>
        <Label x:Name="label" Content="# Pints:" HorizontalAlignment="Left" Margin="21,173,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.229,3.804"/>
        <Label x:Name="lblMessage" Content="Click Button to order pints." HorizontalAlignment="Left" Margin="21,217,0,0" VerticalAlignment="Top" Width="481"/>

    </Grid>
</Window>
